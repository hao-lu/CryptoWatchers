<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="crypto"
            type="lu.hao.cryptowatchers.Cryptocurrency"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_launcher"
                    app:imageUrl="@{crypto.id}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="16dp" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/market_cap" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@{crypto.name}"
                    app:layout_constraintStart_toEndOf="@+id/symbol"
                    app:layout_constraintTop_toTopOf="@+id/symbol"
                    tools:text="Bitcoin" />

                <TextView
                    android:id="@+id/market_cap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@{crypto.formatMarketCap(crypto.marketCap)}"
                    app:layout_constraintBottom_toBottomOf="@+id/icon"
                    app:layout_constraintStart_toEndOf="@+id/icon"
                    tools:text="Market Cap: $239,095,010,370" />

                <TextView
                    android:id="@+id/symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@{crypto.symbol}"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/icon"
                    app:layout_constraintTop_toTopOf="@+id/icon"
                    tools:text="BTC" />

                <TextView
                    android:id="@+id/price_usd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{crypto.formatPrice(crypto.priceUsd)}"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="308dp"
                    tools:layout_editor_absoluteY="16dp"
                    tools:text="$15,246.10" />

                <TextView
                    android:id="@+id/percent_change_1h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@{crypto.formatPercent1h(crypto.percentChange1h)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/percent_change_24h"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    tools:text="1h: 0.6%" />

                <TextView
                    android:id="@+id/percent_change_24h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@{crypto.formatPercent24h(crypto.percentChange24h)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/percent_change_7d"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/percent_change_1h"
                    app:layout_constraintTop_toBottomOf="@+id/icon"
                    app:layout_constraintVertical_bias="0.058"
                    tools:text="24h: -3.05%" />

                <TextView
                    android:id="@+id/percent_change_7d"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="32dp"
                    android:text="@{crypto.formatPercent7d(crypto.percentChange7d)}"
                    app:layout_constraintTop_toBottomOf="@+id/icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/percent_change_24h"
                    tools:layout_editor_absoluteY="72dp"
                    tools:text="7d: -14.64%" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>