<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="coin"
            type="lu.hao.cryptowatchers.Coin" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/label_market_cap"
            style="@style/LabelCoinInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MARKET CAP"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/market_cap"
            style="@style/CoinInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{coin.formatVolume(coin.marketCap)}"
            app:layout_constraintEnd_toStartOf="@+id/label_volume"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_market_cap"
            tools:text="$186,830,039,669" />

        <TextView
            android:id="@+id/label_volume"
            style="@style/LabelCoinInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="VOLUME (24H)"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/market_cap"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/volume"
            style="@style/CoinInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{coin.formatVolume(coin.volume)}"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/label_volume"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_volume"
            tools:text="$9,626,700,000" />


        <TextView
            android:id="@+id/label_circulating"
            style="@style/LabelCoinInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="CIRCULATING SUPPLY"
            app:layout_constraintLeft_toLeftOf="@id/label_market_cap"
            app:layout_constraintTop_toBottomOf="@id/market_cap"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="54dp" />

        <TextView
            android:id="@+id/circulating"
            style="@style/CoinInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{coin.formatSupply(coin.availableSupply)}"
            app:layout_constraintLeft_toLeftOf="@id/label_circulating"
            app:layout_constraintTop_toBottomOf="@id/label_circulating"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="129dp"
            tools:text="16,828,700" />

        <TextView
            android:id="@+id/label_max_supply"
            style="@style/LabelCoinInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TOTAL SUPPLY"
            app:layout_constraintLeft_toLeftOf="@id/label_volume"
            app:layout_constraintTop_toBottomOf="@id/volume"
            tools:layout_editor_absoluteX="230dp"
            tools:layout_editor_absoluteY="113dp" />

        <TextView
            android:id="@+id/max_supply"
            style="@style/CoinInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{coin.formatTotalSupply(coin.maxSupply)}"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/label_max_supply"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_max_supply"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="21,000,000" />


    </android.support.constraint.ConstraintLayout>

</layout>